
# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# PORT
# ===========================================

PORT=4000

# ===========================================
# JWT CONFIGURATION
# ===========================================

# Secret for signing access tokens (min 32 chars recommended)
JWT_SECRET=your_jwt_secret_min_32_chars_here

# Secret for signing refresh tokens â€” must differ from JWT_SECRET (min 32 chars recommended)
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_here

# ===========================================
# STELLAR / SOROBAN CONFIGURATION
# ===========================================

# Stellar network (testnet or public)
STELLAR_NETWORK=testnet

# Soroban RPC URL for smart contract interactions
STELLAR_SOROBAN_URL=https://soroban-testnet.stellar.org

# Network passphrase (leave default for testnet)
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# ===========================================
# CONTRACT ADDRESSES
# ===========================================

# Reputation contract deployed on Soroban
REPUTATION_CONTRACT_ID=your_reputation_contract_id